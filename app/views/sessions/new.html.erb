<% if flash[:notice] %>
    <h4><%= flash[:notice] %></h4>
<% end %>
<%= form_for @user, url: signin_path, method: :post, class: "form-group" do |f| %>

    <%= f.label :name, "Your name:" %>
    <%= f.collection_select :id, @users, :id, :name, prompt: "Please select your username from this dropdown" %><br><br>

    <%= f.label :password, "Your password:" %>
    <%= f.password_field :password, class: "form-control" %><br>

    <%= f.submit 'Sign In' %><br><br>
    or <%= link_to 'Sign Up', new_user_path %>

<% end %>